<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Mensagens </title>

    <link rel="stylesheet" href="/css/tailwind.css">
    <script>
        function openModal() {
            document.getElementById('messageModal').classList.remove('hidden');
        }

        function closeModal() {
            
            document.getElementById('messageModal').classList.add('hidden');
        }

        function submitMessage() {
            const message = document.getElementById('messageText').value;
        
            console.log('Recado enviado:', message);
            closeModal();
            document.getElementById('messageText').value = '';
        }
    </script>
</head>
<body class="bg-pink-50 min-h-screen flex flex-col items-center  p-4">
    <main class="max-w-md w-full ">

        <div class="max-w-60  m-auto max-h-[100px] flex ">
             <img src="/flor.png"  alt="" class="object-cover">
        </div>

        <div class="text-center">
            <h1 class="text-3xl font-bold  mb-2 text-gray-600"> Agradecemos por sua presen√ßa!</h1>
            <p class="text-lg text-gray-600"></p>
        </div>
    
        <div class="relative w-full h-96 rounded-lg overflow-hidden shadow-lg mb-10">
            <img src="https://paroquiasaojoaodebrito.com.br/wp-content/uploads/2019/01/01-casal-futuro.jpg" alt="Foto do casal" class="w-full h-full object-cover">
        </div>
        <button onclick="openModal()" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Deixar um recado para os noivos
        </button>
    </main>

    <!-- Modal para deixar recado -->
    <div id="messageModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full">
        
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
            <div class="flex flex-row justify-end"> <button class="bg-red-50 m-2 rounded-sm p-1 text-gray-600" onclick="closeModal()">  Fechar </button></div>
            <%- include('./video', {url})  %> 

          
          
        </div> 
    </div>
</body>
</html>